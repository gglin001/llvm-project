{
  "version": 2,
  "configurePresets": [
    {
      "name": "llvm_runtimes",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/../build_runtimes",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build_runtimes/install",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "LIBC_HDRGEN_EXE": "${sourceDir}/../build_libc_hdrgen/bin/libc-hdrgen",
        "LLVM_ENABLE_RUNTIMES": "libc",
        "LLVM_LIBC_FULL_BUILD": true,
        "LLVM_INCLUDE_TESTS": false,
        // for cross build, need custom CC and CXX
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        // "LIBC_TARGET_TRIPLE": "riscv64-unknown-elf",
        "UNUSED": "UNUSED"
      }
    }
  ]
}
