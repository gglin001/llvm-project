{
    "terminal.integrated.env.linux": {
        "EXT_PATH": "${workspaceFolder}/build/bin",
        "EXT_PYTHONPATH": "${workspaceFolder}/build/tools/mlir/python_packages/mlir_core",
    },
    "terminal.integrated.env.osx": {
        "EXT_PATH": "${workspaceFolder}/build/bin",
        "EXT_PYTHONPATH": "${workspaceFolder}/build/tools/mlir/python_packages/mlir_core",
    },
    "python.analysis.extraPaths": [
        "${workspaceFolder}/build/tools/mlir/python_packages/mlir_core",
    ],
    "cmake.sourceDirectory": "${workspaceFolder}/llvm",
    "cmake.configureArgs": [
        // "-DLLVM_ENABLE_PROJECTS=mlir",
        "-DLLVM_ENABLE_PROJECTS=mlir;clang",
        // "-DLLVM_ENABLE_PROJECTS=mlir;clang;clang-tools-extra",
    ],
    "cmake.configureSettings": {
        "CMAKE_INSTALL_PREFIX": "${workspaceFolder}/build/install",
        "CMAKE_POSITION_INDEPENDENT_CODE": "ON",
        "LLVM_ENABLE_ASSERTIONS": "ON",
        "LLVM_ENABLE_LLD": "ON",
        "LLVM_INCLUDE_BENCHMARKS": "OFF",
        "LLVM_INCLUDE_EXAMPLES": "OFF",
        "LLVM_INCLUDE_DOCS": "OFF",
        "LLVM_INCLUDE_TESTS": "OFF",
        "LLVM_INCLUDE_TOOLS": "ON",
        "LLVM_INCLUDE_UTILS": "ON",
        "LLVM_BUILD_BENCHMARKS": "OFF",
        "LLVM_BUILD_EXAMPLES": "OFF",
        "LLVM_BUILD_DOCS": "OFF",
        "LLVM_BUILD_TESTS": "OFF",
        "LLVM_BUILD_TOOLS": "ON",
        "LLVM_BUILD_UTILS": "ON",
        "LLVM_INSTALL_UTILS": "ON",
        "LLVM_TARGETS_TO_BUILD": "Native;RISCV",
        "LLVM_TOOL_LLVM_LTO_BUILD": "ON",
        "LLVM_TOOL_LLVM_LTO2_BUILD": "ON",
        "LLVM_TOOL_LTO_BUILD": "ON",
        "MLIR_ENABLE_BINDINGS_PYTHON": "ON",
        // "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        // "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        // for macos
        // "LLVM_ENABLE_ZSTD": false,
        // "LLVM_ENABLE_TERMINFO": false,
    },
    "mlir.server_path": "${workspaceFolder}/build/bin/mlir-lsp-server",
}
